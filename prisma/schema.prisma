generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id             String   @id @default(cuid())
  images         String[]
  tags           String[]
  title          String
  price          Float
  description    String
  colors         String[]
  sizes          String[]
  slug           String   @unique
  gender         Gender?
  category       Category
  material       String?
  fit            String?
  care           String?
  origin         String?
}

enum Gender {
  MEN
  WOMEN
}

