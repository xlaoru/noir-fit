generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id String @id @default(cuid())
  type Type
  images String[]
  title String
  price Float
  description String
  colors String[]
  sizes String[]
  slug String @unique
  gender Gender?
  category Category
  material String
  fit String
  care String
  origin String
  createdAt DateTime @default(now())
}

enum Type {
  APPAREL
  ACCESSORIES
  NUTRITION
}

enum Gender {
  MEN
  WOMEN
}

enum Category {
  TSHIRT
  TANK
  HOODIE
  SWEATSHIRT
  JOGGERS
  SHORTS
