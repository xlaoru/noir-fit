generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Collection {
  id             String   @id @default(cuid())
  images         String[]
  title          String
  price          Float
  description    String
  colors         String[]
  sizes          String[]
  slug           String   @unique
  gender         Gender
  category       CollectionCategories
  material       String
  fit            String
  care           String
  origin         String
}

enum Gender {
  MEN
  WOMEN
}

enum CollectionCategories {
  TSHIRT
  TANK
  HOODIE
  SWEATSHIRT
  JOGGERS
  SHORTS
  COMPRESSION
  LEGGINGS
  OUTERWEAR
  SEAMLESS
  OVERSIZE
  TRAINING
  RUNNING
  POWERLIFTING
  CROSSFIT
  RECOVERY
  SPORT_BRA
  CROP
  HIGHWAIST
  GYM_SET
  YOGA
}

model Accessory {
  id             String   @id @default(cuid())
  images         String[]
  title          String
  price          Float
  description    String
  colors         String[]
  slug           String   @unique
  category       AccessoryCategories
  material       String
  fit            String
  care           String
  origin         String
}

enum AccessoryCategories {
  BAG
  GLOVES
  STRAPS
  WRAPS
  BELT
  SHAKER
  BOTTLE
  CAP
  BEANIE
  TOWEL
  WATCH
  SOCKS
  KNEE_SLEEVES
  WRIST_SLEEVES
  BACKPACK
  ESSENTIAL
}

model Nutrition {
  id             String   @id @default(cuid())
  images         String[]
  title          String
  price          Float
  description    String
  slug           String   @unique
  category       NutritionCategories
  material       String
  fit            String
  care           String
  origin         String
}

enum NutritionCategories {
  PROTEIN
  WHEY
  ISOLATE
  CASEIN
  BCAA
  EAA
  PREWORKOUT
  FATBURNER
  VITAMINS
  TESTOSTERONE
  CREATINE
  ENERGY
  RECOVERY
  WEIGHT_GAINER
  SHRED
  HEALTH
  SUPPLEMENT
}